<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/stream_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/catfisheye" />

    <ImageView
        android:id="@+id/arrow_keys_view"
        android:layout_width="189dp"
        android:layout_height="136dp"
        android:layout_alignBottom="@id/stream_view"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/arrow_keys"
        app:tint="@color/white" />

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top">

        <ImageButton
            android:id="@+id/btn_obstacle_avoidance"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/primary_color"
            android:src="@drawable/obstacle_avoidance_button"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btn_line_following"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/primary_color"
            android:src="@drawable/line_following_button"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btn_treat"
            android:layout_width="66dp"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:background="@color/primary_color"
            android:src="@drawable/treat_button"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btn_record"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/primary_color"
            android:src="@drawable/record_button"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btn_picture"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/primary_color"
            android:src="@drawable/picture_button"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="top"
        android:layout_below="@id/button_layout">

        <ImageView
            android:id="@+id/new_icon"
            android:layout_width="52dp"
            android:layout_height="74dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:src="@drawable/bar"
            app:tint="@color/white" />
    </LinearLayout>

</RelativeLayout>