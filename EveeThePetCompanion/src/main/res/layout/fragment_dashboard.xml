<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/dashboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_12"
            android:text="@string/hi_chloe"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reminders"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_16" />

        <LinearLayout
            android:id="@+id/reminders_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@drawable/card_background"
            android:padding="@dimen/padding_8">

            <!-- Place the reminders here -->

        </LinearLayout>

        <EditText
            android:id="@+id/edit_text_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_more_reminders"
            android:inputType="text" />

        <TextView
            android:id="@+id/text_no_reminders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_do_not_currently_have_any_reminders_added"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_16"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_new_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/new_reminder_button_text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recently_taken"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_16" />

        <HorizontalScrollView
            android:id="@+id/recent_images_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16">

            <LinearLayout
                android:id="@+id/recent_images_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/recent_image1"
                    android:layout_width="@dimen/recent_image_width"
                    android:layout_height="@dimen/recent_image_height"
                    android:src="@drawable/photo_placeholder"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_4" />

                <ImageView
                    android:id="@+id/recent_image2"
                    android:layout_width="@dimen/recent_image_width"
                    android:layout_height="@dimen/recent_image_height"
                    android:src="@drawable/photo_placeholder"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="@dimen/margin_4" />

                <ImageView
                    android:id="@+id/recent_image3"
                    android:layout_width="@dimen/recent_image_width"
                    android:layout_height="@dimen/recent_image_height"
                    android:src="@drawable/photo_placeholder"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="@dimen/margin_4" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>
