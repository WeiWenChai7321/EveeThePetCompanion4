<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:onClick="onHelpClicked">

    <ImageView
        android:id="@+id/action_help_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/action_help_text"
        android:scaleType="fitCenter"
        android:src="@drawable/petprofilewhite" />

    <TextView
        android:id="@+id/action_help_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:text="@string/action_petprofile"
        style="@style/ActionHelpTextAppearance" />

</RelativeLayout>
